<% if (comment.user().id) { %>
  <div class="col-sm-2">
    <a href="#/users/<%= comment.user().id %>" class="avatar"></a>
  </div>
<%  } %>

<div class="col-sm-10 comment">
  <span>
    <% if (comment.user().id) { %>
      <a href="#/users/<%= comment.user().id %>">
        <%= comment.user().get("email") %>
      </a>

      <%= comment.get("created_at_ago") %>
    <%  } %>
  </span>


  <p><%= comment.get("content") %></p>
</div>
