<div class="form-group">
  <label for="image-title">Title</label>
  <input type="text"
         class="form-control"
         id="image-title"
         name="image[title]"
         value="<%= image.get("title") %>">
</div>

<div class="form-group">
  <label for="image-description">Description</label>
  <textarea class="form-control"
            id="image-description"
            name="image[description]"><%= image.get("description") %></textarea>
</div>

<div class="form-group">
  <label for="image-address">Address</label>
  <input type="text"
         class="form-control"
         id="image-address"
         name="image[address]"
         value="<%= image.get("address") %>">
</div>
