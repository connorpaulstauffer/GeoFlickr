<div class="row">
  <div class="col-sm-6" id="form-fields">
    <div class="row">
      <div class="col-sm-12">
        <div class="thumbnail">
          <img src="<%= image.get("image").thumb.url %>" class="img-responsive"/>
        </div>
      </div>
    </div>

    <div class="row">
      <form id="image-form-data">
        <div class="form-group">
          <label for="image-title">Title</label>
          <input type="text"
                 class="form-control"
                 id="image-title"
                 name="image[title]"
                 value="<%= image.get("title") %>">
        </div>

        <div class="form-group">
          <label for="image-description">Description</label>
          <textarea class="form-control"
                    id="image-description"
                    name="image[description]"><%= image.get("description") %></textarea>
        </div>

        <div class="form-group">
          <label for="tag-checkboxes">Tags</label>
          <input type="text" name="tag[label]" id="tag-input">
          <div id="tag-checkboxes">
          </div>
        </div>

        <input type="hidden" name="image[latitude]">
        <input type="hidden" name="image[longitude]">
      </form>
    </div>
  </div>

  <div class="col-sm-6" id="map-form">
    <div id="map-form-search">
      <form class="form-inline">
        <div class="input-group">
         <span class="input-group-addon">
           <span class="glyphicon glyphicon-search"></span>
         </span>
         <input type="text"
                class="form-control"
                id="search-input">
       </div>
      </form>
    </div>

    <div id="image-form-map">
    </div>
  </div>
</div>

